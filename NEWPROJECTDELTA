-- Prevent game from changing FOV
if hookmetamethod and newcclosure then
    local oldNewIndex
    oldNewIndex = hookmetamethod(game, "__newindex", newcclosure(function(self, key, value)
        if not checkcaller() and self == Camera and key == "FieldOfView" and FOVChanger.Enabled then
            return
        end
        
        return oldNewIndex(self, key, value)
    end))
end

-- ==================== PLAYERS TAB - INVENTORY CHECKER ====================
local InventorySection = PlayersTab:CreateSection("Inventory Checker")

local InventoryChecker = {
    Enabled = false,
    UpdateDelay = 0.25,
    Position = Vector2.new(200, 200),
    LastUpdate = 0,
    Drawings = {}
}

local function ClearInventoryDrawings()
    for _, drawing in pairs(InventoryChecker.Drawings) do
        pcall(function() drawing:Remove() end)
    end
    InventoryChecker.Drawings = {}
end

local function CreateInventoryText(text, yOffset)
    local drawing = Drawing.new("Text")
    drawing.Text = text
    drawing.Size = 13
    drawing.Font = Drawing.Fonts.Monospace
    drawing.Outline = true
    drawing.Center = false
    drawing.Position = InventoryChecker.Position + Vector2.new(0, yOffset)
    drawing.Color = Color3.new(1, 1, 1)
    drawing.Visible = true
    
    table.insert(InventoryChecker.Drawings, drawing)
    return drawing
end

local function UpdateInventory(playerName)
    ClearInventoryDrawings()
    
    pcall(function()
        local rplayers = ReplicatedStorage:FindFirstChild("Players")
        if not rplayers then return end
        
        local targetPlayer = rplayers:FindFirstChild(playerName)
        if not targetPlayer then return end
        
        local yOffset = 0
        CreateInventoryText(playerName .. "'s Inventory", yOffset)
        yOffset = yOffset + 15
        
        CreateInventoryText("[Inventory]", yOffset)
        yOffset = yOffset + 15
        
        local inventory = targetPlayer:FindFirstChild("Inventory")
        if inventory then
            for _, item in pairs(inventory:GetChildren()) do
                CreateInventoryText("  " .. item.Name, yOffset)
                yOffset = yOffset + 15
            end
        end
    end)
end

PlayersTab:CreateToggle({
   Name = "Enable Inventory Viewer",
   CurrentValue = false,
   Flag = "InventoryViewer",
   Callback = function(Value)
       InventoryChecker.Enabled = Value
       if not Value then
           ClearInventoryDrawings()
       end
   end,
})

PlayersTab:CreateSlider({
   Name = "Position X",
   Range = {0, 1920},
   Increment = 10,
   Suffix = "px",
   CurrentValue = 200,
   Flag = "InvPosX",
   Callback = function(Value)
       InventoryChecker.Position = Vector2.new(Value, InventoryChecker.Position.Y)
   end,
})

PlayersTab:CreateSlider({
   Name = "Position Y",
   Range = {0, 1080},
   Increment = 10,
   Suffix = "px",
   CurrentValue = 200,
   Flag = "InvPosY",
   Callback = function(Value)
       InventoryChecker.Position = Vector2.new(InventoryChecker.Position.X, Value)
   end,
})

PlayersTab:CreateSlider({
   Name = "Update Delay",
   Range = {0.1, 2},
   Increment = 0.05,
   Suffix = "s",
   CurrentValue = 0.25,
   Flag = "InvDelay",
   Callback = function(Value)
       InventoryChecker.UpdateDelay = Value
   end,
})

-- Inventory Update Loop
RunService.RenderStepped:Connect(function()
    if InventoryChecker.Enabled then
        local currentTime = tick()
        if currentTime - InventoryChecker.LastUpdate >= InventoryChecker.UpdateDelay then
            InventoryChecker.LastUpdate = currentTime
            
            -- Check aimbot target first
            local targetPlayer = Aimbot.CurrentTarget or SilentAim.CurrentTarget
            if targetPlayer and IsAlive(targetPlayer) then
                UpdateInventory(targetPlayer.Name)
            else
                ClearInventoryDrawings()
            end
        end
    end
end)

